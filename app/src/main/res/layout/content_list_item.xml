<?xml version="1.0" encoding="utf-8"?>
<com.hasika.nimingban.view.Content_CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_list_view_item"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="13dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/gr"
                android:text="ssssss"
                android:gravity="left"
                android:id="@+id/content_userid"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/gr"
                android:text="ssssss"
                android:gravity="center"
                android:id="@+id/content_id"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/gr"
                android:text="ssssss"
                android:gravity="right"
                android:id="@+id/content_now"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:paddingBottom="5dp"
            android:maxLines="10"
            android:id="@+id/content_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.hasika.nimingban.view.NMBImageView
            xmlns:NMBImageVIew="http://schemas.android.com/apk/res-auto"
            android:id="@+id/content_img_"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:visibility="gone"
            NMBImageVIew:F5="false"
            NMBImageVIew:url=""
            android:scaleType="centerCrop"
            android:background="@color/black"
            android:layout_width="wrap_content"
            NMBImageVIew:usecache="true"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextSwitcher
                android:textColor="@color/gr"
                android:gravity="left"
                android:maxLines="1"
                android:id="@+id/content_replys"
                android:layout_weight="8"
                android:layout_width="1dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/gr"
                android:gravity="right"
                android:maxLines="1"
                android:id="@+id/content_replyCount"
                android:layout_weight="2"
                android:layout_width="1dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</com.hasika.nimingban.view.Content_CardView>
